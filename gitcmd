
echo "1. 更新來自遠端的資訊:    git pull"
echo "2. 同步本地端資料到遠端:  git push"
echo "3. 無條件使用遠端的資訊:  git reset --hard origin/master"
echo "4. 顯示log:               git log --stat"
read option

if [ "$option" == "1" ]; then
    git pull 
elif [ "$option" == "2" ]; then
    git push
elif [ "$option" == "3" ]; then
    git reset --hard origin/master
elif [ "$option" == "4" ]; then
    git log --stat
fi
